<!DOCTYPE html>
<html>
  <head>
    <title>BookReviewApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Book Review</a>
      </nav>
      <nav>
        <% if user_signed_in? %>
          <%= link_to "Reviews", book_reviews_path, class: 'navbar-brand'  %>
          <%= link_to "Create Review", new_book_review_path, class: 'navbar-brand'  %>
          <%= link_to "Sign Out", destroy_user_session_path, class: 'navbar-brand',  method: :delete %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class: 'navbar-brand' %>
          <%= link_to "Log in", new_user_session_path, class: 'navbar-brand' %>
        <%end%>
      </nav>
    </nav>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
