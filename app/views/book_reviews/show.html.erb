<div class="card">
  <div class="card-body">
    <h1><%= @book_review.title %></h1>
    <p><%= @book_review.first_name %></p>
    <p><%= @book_review.last_name %></p>
    <p><%= @book_review.review %></p>
    <p>Rating: <%= @book_review.rating %></p>
    <%= link_to "All Reviews", book_reviews_path, class: "btn btn-primary"%>
    <% if current_user == @book_review.user%>
      <%= link_to "Delete Review", book_reviews_path,  method: :delete, data: {confirm: "Are you sure you want to delete review?"}, class: "btn btn-danger"%>
      <%= link_to "Edit Reviews", edit_book_review_path,class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
